<!DOCTYPE html>

<html class="fullscreen-bg">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title>NECC Family Registration</title>

    @Styles.Render("~/Content/css")
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700" rel="stylesheet">

    <!-- ICONS -->
    <link rel="apple-touch-icon" href="~/Content/images/favicon.ico">
    <link rel="icon" type="image/png" href="~/Content/images/favicon.ico">
    @RenderSection("styles", required: false)
</head>
<body>
    <!-- WRAPPER -->
    <div id="wrapper">
        <div class="vertical-align-wrap">
            <div class="vertical-align-middle">
                <div class="logo text-center img-responsive"><img src="~/Content/images/logo_color.png" alt="Northeast Christian Logo" style="max-width: 300px"></div>
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
